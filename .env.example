# Server Configuration
PORT=3000
NODE_ENV=development

# Apify Configuration
# IMPORTANTE: El token de Apify se env√≠a DESDE CLAY en cada request via header "x-apify-token"
# Solo configura esto como fallback si quieres hacer pruebas locales
APIFY_API_TOKEN=apify_api_xxxxxxxxxxxxxxxxxxxxxxxx  # OPCIONAL para testing

# Target profile (puede venir del request de Clay via query param "username")
TARGET_PROFILE_USERNAME=gabrielmartinezes  # OPCIONAL - solo para fallback

# LinkedIn Configuration (LEGACY - Solo si usas Puppeteer)
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password
TARGET_PROFILE_URL=https://www.linkedin.com/in/gabrielmartinezes/

# Scraping Configuration
MAX_POSTS_PER_SCRAPE=10
HEADLESS_MODE=true
CACHE_TTL_HOURS=24
ENABLE_SMART_SCRAPING=true
SCRAPING_TIMEOUT=120000

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
